{
  "name": "betfred-slot-assistant-desktop",
  "version": "0.2.0",
  "description": "Independent third-party desktop companion app that enhances the Betfred web experience.",
  "main": "app/main.js",
  "author": "You",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "electron .",
    "start:debug": "cross-env BFAPP_DEBUG=1 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.betfred-slot-assistant",
    "productName": "Betfred Slot Assistant (Unofficial)",
    "copyright": "Copyright Â© 2025",
    "files": [
      "app/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USERNAME",
        "repo": "YOUR_REPO_NAME"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}

{
  "name": "betfred-slot-assistant-desktop",
  "version": "0.2.4",
  "description": "Independent third-party desktop companion app that enhances the Betfred web experience.",
  "main": "app/main.js",
  "author": "The-Devil-DCLXVI",
  "license": "UNLICENSED",
  "private": false,
  "scripts": {
    "start": "electron .",
    "start:debug": "cross-env BFAPP_DEBUG=1 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.the-devil-dclxvi.betfred-slot-assistant",
    "productName": "BF Assistant",
    "copyright": "Copyright \u00a9 2025",
    "files": [
      "app/**/*",
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "The-Devil-DCLXVI",
        "repo": "Betfred-Slot-Assistant",
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BF Assistant",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "uninstallDisplayName": "BF Assistant",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/installerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp",
      "runAfterFinish": true,
      "include": "build/installer-custom.nsh"
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "artifactName": "BF-Assistant-Setup-${version}.${ext}"
  }
}